<!--components/video-item/video-item.wxml-->
<wxs src="../../utils/format.wxs" module="fmt"></wxs>

<view class="video-item">
  <view class="album">
    <image class="image" src="{{videoData.cover}}" mode="widthFix" />
    <view class="info">
      <view class="count">{{fmt.formatCount(videoData.playCount)}}</view>
      <view class="duration">{{fmt.formatTime(videoData.mv.videos[0].duration)}}</view>
    </view>
  </view>
  <view class="content">{{videoData.name}} - {{videoData.artistName}}</view>
</view>