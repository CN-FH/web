/* components/song-item-item-v2/song-item-item-v2.wxss */
.zebra {
  background-color: #fafafa;
}

.song-item-v2 {
  display: flex;
  align-items: center;
  padding: 26rpx 10rpx;
  border-bottom: 1px solid rgb(235, 235, 235);
}

.order {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.song {
  flex: 8;
}

.name {
  font-size: 32rpx;
}

.ars {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666;
}

.icon {
  width: 40rpx;
  height: 0;
  margin-right: 6rpx;
  margin-top: 2rpx;
}

.ars-itm::before {
  content: '/';
  padding: 0 6rpx;
}

.ars-itm:first-of-type::before {
  content: '';
  padding: 0;
}
