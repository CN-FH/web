/* pages/main-profile/main-profile.wxss */
page {
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #f5f5f5;
}

.area {
  border-radius: 12rpx;
  background-color: #fff;
}

.userInfo {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
}

.userInfo .avatar {
  width: 74rpx;
  height: 0;
  border-radius: 50%;
}

.userInfo .name {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.my-music {
  margin-top: 40rpx;
}

.my-music .title {
  font-size: 36rpx;
  font-weight: 600;
}

.my-music .list {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.my-music .list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-music .list .item .icon {
  width: 54rpx;
  height: 0;
}

.my-music .list .item .name {
  margin-top: 10rpx;
  font-size: 26rpx;
}
