/* components/menu-item/menu-item.wxss */
.menu-item {
  width: 100%;
}

.cover {
  position: relative;
  display: flex;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.image {
  width: 100%;
}

.count {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 2rpx 10rpx;
  font-size: 22rpx;
  border-radius: 12rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

.content {
  padding: 6rpx;
  font-size: 24rpx;

  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
