/* components/menu-area/menu-area.wxss */
.menu-area {
  margin: 30rpx -24rpx 0;
}

.menu-area .header {
  display: flow-root;
  padding: 0 24rpx;
  margin-bottom: 22rpx;
}

.menu-area .list {
  white-space: nowrap;
}

.menu-area .list .item {
  display: inline-block;
  margin-left: 24rpx;
  width: 220rpx;
  height: 300rpx;
}

.menu-area .list .item:last-of-type {
  margin-right: 24rpx;
}
