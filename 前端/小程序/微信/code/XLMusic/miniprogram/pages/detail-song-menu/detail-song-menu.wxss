/* pages/detail-song-menu/detail-song-menu.wxss */
.bg-gray {
  background-color: #f5f5f5;
}

.cover {
  position: relative;
  padding: 50rpx 40rpx;
  color: #fff;
  z-index: -1;
}

.cover::after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: inherit;
  filter: blur(8rpx);
  z-index: -1;
}

.cover .header {
  display: flex;
}

.header .cover-img {
  flex: 1;
}

.cover-img .image {
  width: 100%;
  border-radius: 12rpx;
}

.header .detail {
  flex: 2;
  padding-left: 40rpx;
}

.detail .name {
  font-size: 34rpx;
}

.detail .creator {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.detail .creator .avatar {
  width: 44rpx;
  border-radius: 50%;
}

.detail .creator .nickname {
  padding: 10rpx;
  font-size: 26rpx;
}

.detail .description {
  margin-top: 2rpx;
  font-size: 26rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.cover .footer {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0 0;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
}

.song-item .index {
  flex: 1;
}

.song-item .song {
  flex: 8;
}
