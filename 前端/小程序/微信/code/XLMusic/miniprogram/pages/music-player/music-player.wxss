/* pages/music-player/music-player.wxss */
.cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.cover {
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(20rpx);
}

.tabs {
  display: flex;
  color: #ccc;
}

.tabs .division {
  margin: 0 8rpx;
}

.tabs .activate {
  color: #fff;
}

.music {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 30rpx 60rpx 0;
  color: #fff;
}

.music .album {
  flex: 1;
  display: flex;
  align-items: center;
}

.music .album .img {
  width: 100%;
  height: 0;
  border-radius: 12rpx;
}

.music .name {
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.music .artists {
  display: flex;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.music .artists .ar-name {
  font-weight: 600;
}

.music .artists .division {
  margin: 0 10rpx;
}

.music .lyric {
  height: 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.progress {
  margin-top: 30rpx;
}

.progress .slider {
  margin: 0 10rpx 0 20rpx;
}

.progress .time {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 0 70rpx;
}

.control .btn {
  width: 60rpx;
}

.control .pause {
  width: 110rpx;
}

.lyric-list {
  height: 100%;
  text-align: center;
  color: #aaa;
}

.lyric-list .item {
  height: 60rpx;
  line-height: 60rpx;
}
