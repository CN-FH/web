<!--pages/music-player/music-player.wxml-->
<image class="cover" mode="aspectFill" src="{{songData.al.picUrl}}"></image>
<view class="cover blur"></view>

<nav-bar>
  <view slot="center" class="tabs">
    <block wx:for="{{pageTitles}}" wx:key="*this">
      <view class="{{currentPage === index ? 'activate' : ''}}" bindtap="onTabTap" data-index="{{index}}">{{item}}</view>
      <view class="division" wx:if="{{index !== pageTitles.length - 1}}">|</view>
    </block>
  </view>
</nav-bar>

<swiper current="{{currentPage}}" bindchange="onSwiperChange" style="height: {{contentHeight}}px;">
  <swiper-item class="music">
    <view class="album">
      <image class="img" mode="widthFix" src="{{songData.al.picUrl}}" />
    </view>
    <view class="name">{{songData.name}}</view>
    <view class="artists">
      <block wx:for="{{songData.ar}}" wx:key="id">
        <view class="ar-name">{{item.name}}</view>
        <view class="division" wx:if="{{index !== songData.ar.length - 1}}">/</view>
      </block>
    </view>
    <view class="lyric">歌词</view>
    <view class="progress">
      <slider class="slider" block-size="10" />
      <view class="time">
        <view>00:00</view>
        <view>05:00</view>
      </view>
    </view>
    <view class="control">
      <image class="btn order" mode="widthFix" src="/assets/images/player/play_order.png"></image>
      <image class="btn" mode="widthFix" src="/assets/images/player/play_prev.png"></image>
      <image class="btn pause" mode="widthFix" src="/assets/images/player/play_pause.png"></image>
      <image class="btn" mode="widthFix" src="/assets/images/player/play_next.png"></image>
      <image class="btn" mode="widthFix" src="/assets/images/player/play_music.png"></image>
    </view>
  </swiper-item>

  <swiper-item>222</swiper-item>
</swiper>